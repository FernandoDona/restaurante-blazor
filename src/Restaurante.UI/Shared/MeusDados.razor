<AuthorizeView>
    <Authorized>
        <NavLink class="nav-link" @onclick="ToggleNavSubMenu">Meus Dados</NavLink>
        @if (expandSubMenu)
        {
            <ul class="nav flex-column expanded-div">
                <li class="nav-item">
                    <NavLink class="nav-link px-2" href="/pedidos">Pedidos</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link px-2" href="/enderecos">Endereços</NavLink>
                </li>
            </ul>
        }
    </Authorized>
</AuthorizeView>

@code{
    private bool expandSubMenu = false;
    private void ToggleNavSubMenu() => expandSubMenu = !expandSubMenu;
}